apiVersion: kops/v1alpha2
kind: InstanceGroup
metadata:
  creationTimestamp: 2018-06-09T05:43:34Z
  labels:
    kops.k8s.io/cluster: cluster.zhy.k8s.local
  name: ig-spotnode
spec:
  cloudLabels:
    billing: IT-Dept
    environment: dev
  detailedInstanceMonitoring: true
  hooks:
  - manifest: |
      Type=oneshot
      ExecStartPre=/usr/bin/mkdir /data
      ExecStart=/usr/bin/mount -t nfs -o nolock -o vers=4 10.0.0.69:/nas /data
    name: MountNFS
  image: ami-c9abbfab
  machineType: c4.large
  maxPrice: "0.678"
  maxSize: 10
  minSize: 1
  nodeLabels:
    kops.k8s.io/instancegroup: ig-spotnode
  role: Node
  rootVolumeOptimization: true
  rootVolumeSize: 30
  rootVolumeType: gp2
  subnets:
  - cn-northwest-1a
  - cn-northwest-1b
  - cn-northwest-1c
